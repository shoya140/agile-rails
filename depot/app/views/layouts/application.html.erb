<!DOCTYPE html>
<html>
<head>
<title>Pragprog Booksオンラインストア</title>
<%= stylesheet_link_tag "application" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
<div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %>
</div>
<div id="columns">
    <div id="side">
        <% if @cart  %>
            <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
                <%= render @cart %>
            <% end %>
        <% end %>
        <ul>
            <li><%= link_to 'ホーム', store_path %></li>
            <li><%= link_to 'よくある質問', store_path %></li>
            <li><%= link_to 'ニュース', store_path %></li>
            <li><%= link_to 'お問い合わせ', store_path %></li>
        </ul>
    </div>
    <div id="main">
        <%= yield %>
    </div>
</div>
</body>
</html>
